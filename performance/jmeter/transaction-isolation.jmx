            <stringProp name="filename"/>
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="script">long current = (vars.get("currentStudentsCount") ?: "0") as long
long next
if (current &gt; 18) {
    next = current - 2
} else if (current &lt; 12) {
    next = current + 3
} else {
    next = current + (Math.random() &gt; 0.5d ? 1 : -1)
}
next = Math.max(10L, Math.min(30L, next))
vars.put("nextStudentsCount", String.valueOf(next))
</stringProp>
