            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper

def response = prev.getResponseDataAsString()
if (!response) {
    throw new AssertionError("Пустой ответ от сервиса")
}
def payload = new JsonSlurper().parseText(response)
if (payload.studentsCount == null) {
    throw new AssertionError("studentsCount отсутствует в ответе")
}
if (payload.studentsCount &lt; 10) {
    throw new AssertionError("Обнаружено грязное чтение: studentsCount=${payload.studentsCount}")
}
if (!payload.coordinates || payload.coordinates.x == null || payload.coordinates.x &lt;= 0) {
    throw new AssertionError("Координаты повреждены в ответе: ${payload.coordinates}")
}
</stringProp>
