<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.ehcache.org/v3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd
                            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-jsr107.xsd">
    <service>
        <jcache:defaults default-template="defaultCache"/>
    </service>

    <cache-template name="defaultCache">
        <expiry>
            <tti unit="minutes">10</tti>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
        <statistics enabled="true"/>
    </cache-template>

    <cache alias="studyGroup" uses-template="defaultCache"/>
    <cache alias="person" uses-template="defaultCache"/>
    <cache alias="coordinates" uses-template="defaultCache"/>
    <cache alias="location" uses-template="defaultCache"/>
    <cache alias="default-query-results-region" uses-template="defaultCache"/>
    <cache alias="default-update-timestamps-region" uses-template="defaultCache"/>
</config>
